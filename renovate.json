{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "commitMessagePrefix": ":arrow_up:",
  "kubernetes": {
    "fileMatch": ["apps/.*\\.(yaml|yml)$"]
  },
  "argocd": {
    "fileMatch": ["apps/argocd\\-conf/argocd\\-apps\\.(yaml|yml)$"]
  },
  "packageRules": [
    {
      "matchPaths": ["apps/argocd\\-conf/argocd\\-apps\\.(yaml|yml)$"],
      "matchStrings": [
        "name: cilium\\n(?:[^\\n]+\\n)+?[ \\t]*targetRevision: (?<currentValue>.+)"
      ],
      "depNameTemplate": "cilium",
      "datasourceTemplate": "helm",
      "groupName": "cilium"
    },
    {
      "matchPaths": ["apps/argocd\\-conf/argocd\\-apps\\.(yaml|yml)$"],
      "matchStrings": [
        "name: cilium-preflight\\n(?:[^\\n]+\\n)+?[ \\t]*targetRevision: (?<currentValue>.+)"
      ],
      "depNameTemplate": "cilium",
      "datasourceTemplate": "helm",
      "groupName": "cilium-preflight"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["apps/system\\-upgrade/k3s\\-upgrade\\-plan\\.(yaml|yml)$"],
      "matchStrings": [
        "version: (?<currentValue>v[\\d\\.\\+\\w-]+)"
      ],
      "depNameTemplate": "k3s",
      "versioningTemplate": "semver-coerced",
      "datasourceTemplate": "custom.k3s"
    },
    {
      "customType": "regex",
      "fileMatch": ["apps/system\\-upgrade/system\\-upgrade\\-controller\\.(yaml|yml)$"],
      "matchStrings": [
        "SYSTEM_UPGRADE_JOB_KUBECTL_IMAGE: (?<depName>[\\w/-]+):(?<currentValue>v?\\d+\\.\\d+\\.\\d+)"
      ],
      "depNameTemplate": "{{depName}}",
      "versioningTemplate": "docker",
      "datasourceTemplate": "docker"
    }
  ],
  "customDatasources": {
    "k3s": {
      "defaultRegistryUrlTemplate": "https://update.k3s.io/v1-release/channels",
      "transformTemplates": [
        "{\"releases\":[{\"version\": $$.(data[id = 'stable'].latest),\"sourceUrl\":\"https://github.com/k3s-io/k3s\",\"changelogUrl\":$join([\"https://github.com/k3s-io/k3s/releases/tag/\",data[id = 'stable'].latest])}],\"sourceUrl\": \"https://github.com/k3s-io/k3s\",\"homepage\": \"https://k3s.io/\"}"
      ]
    }
  }
}
