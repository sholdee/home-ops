{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor"
  ],
  "commitMessagePrefix": ":arrow_up:",
  "packageRules": [
    {
      "packagePatterns": ["^ghcr.io\\/linuxserver\\/"],
      "versioning": "regex:^v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>ls\\d+)$"
    }
  ],
  "kubernetes": {
    "fileMatch": ["\\.(yaml|yml)$"]
  },
  "argocd": {
    "fileMatch": ["argocd/argocd\\-applications\\.(yaml|yml)$"]
  },
  "ignorePaths": ["**/kube-prometheus/**"]
}
